      "tokens": 6,
      "efficiency": "very-high",
      "tip": "Simple instruction, focused output"
    },
    {
      "id": "write-headline",
      "category": "writing",
      "title": "Generate Headlines",
      "description": "Create compelling headlines",
      "prompt": "Write 3 headlines for: [TOPIC]",
      "tokens": 7,
      "efficiency": "very-high",
      "tip": "Specific count limits generation"
    },
    {
      "id": "analyze-sentiment",
      "category": "analysis",
      "title": "Sentiment Analysis",
