      "category": "translation",
      "title": "Quick Translate",
      "description": "Direct translation",
      "prompt": "Translate to [LANGUAGE]: [YOUR TEXT]",
      "tokens": 6,
      "efficiency": "very-high",
      "tip": "Minimal prompt for translation tasks"
    },
    {
      "id": "translate-formal",
      "category": "translation",
      "title": "Formal Translation",
      "description": "Professional/formal tone translation",
      "prompt": "Translate formally to [LANGUAGE]: [YOUR TEXT]",
      "tokens": 7,
      "efficiency": "very-high",
      "tip": "Single modifier keeps it efficient"
