      "tokens": 10,
      "efficiency": "high",
      "tip": "Single focus prevents scope creep"
    },
    {
      "id": "code-convert",
      "category": "coding",
      "title": "Convert Language",
      "description": "Convert code between languages",
      "prompt": "Convert to [LANGUAGE]. Code only:\n[YOUR CODE]",
      "tokens": 9,
      "efficiency": "high",
      "tip": "Specify target language clearly"
    },
    {
      "id": "write-email",
      "category": "writing",
      "title": "Draft Email",
      "description": "Professional email draft",
