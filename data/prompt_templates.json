  "templates": [
    {
      "id": "summary-brief",
      "category": "summarization",
      "title": "Brief Summary",
      "description": "Get a concise summary in 2-3 sentences",
      "prompt": "Summarize in 2-3 sentences: [YOUR TEXT]",
      "tokens": 12,
      "efficiency": "high",
      "tip": "Specifying length reduces unnecessary output"
    },
    {
      "id": "summary-bullets",
      "category": "summarization",
      "title": "Bullet Point Summary",
      "description": "Extract key points as a bullet list",
      "prompt": "List 5 key points from: [YOUR TEXT]",
      "tokens": 10,
      "efficiency": "high",
      "tip": "Numbered limits prevent verbose responses"
    },
    {
      "id": "summary-tldr",
      "category": "summarization",
      "title": "TL;DR",
      "description": "One-line summary for quick overview",
      "prompt": "TL;DR (one line): [YOUR TEXT]",
      "tokens": 9,
      "efficiency": "very-high",
      "tip": "Shortest summary format available"
    },
    {
      "id": "code-fix",
      "category": "coding",
      "title": "Fix Bug",
      "description": "Get a targeted bug fix",
      "prompt": "Fix this bug. Return only the corrected code:\n[YOUR CODE]",
      "tokens": 14,
      "efficiency": "high",
      "tip": "'Return only code' prevents lengthy explanations"
    },
    {
      "id": "code-explain",
      "category": "coding",
      "title": "Explain Code",
